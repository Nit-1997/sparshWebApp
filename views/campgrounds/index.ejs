<% include ../partials/header %>

<div class="container">
   <header class="jumbotron">
      <div class="container">
          <h1><span class="glyphicon glyphicon-tent"></span>Welcome to Yelpcamp!</h1>
          <p>
              View our hand-picked campgrounds from all over the world.
          </p>
          <p>
              <a href ="/campgrounds/new" class="btn btn-large btn-primary">Click here to add a new campground</a>
          </p>
      </div>
   </header>
   <div class="row">
       <div class ="col-lg-12">
           <h3>
                   Our most poplular campgrounds
           </h3>
       </div>
   </div>
   <div class="row text-center" style="display:flex;flex-wrap:wrap;">
        
            <% for(var i=0;i<campgrounds.length;i++){ %>
               <div class="col-md-3 col-sm-6">
                     <div class="thumbnail">
                        <img src = "<%= campgrounds[i].image %>">
                     </div>
                     <div class="caption">
                         <h4><%= campgrounds[i].name %></h4>
                     </div>
                     <p>
                        <a href="/campgrounds/<%=campgrounds[i]._id%>" class="btn btn-primary">More info</a>
                     </p>
               </div>
            <% } %>
   </div>
        

</div>



<% include ../partials/footer %>